        android:duration="70"
        android:fromXScale="1.15"
        android:fromYScale="1.15"
        android:interpolator="@android:anim/accelerate_interpolator"
        android:pivotX="50.0%"
        android:pivotY="50.0%"
        android:startOffset="150"
        android:toXScale="1.0"
        android:toYScale="1.0" />
</set>